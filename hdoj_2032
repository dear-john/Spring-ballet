//第一次打杨辉三角，很好看

#include<iostream>
using namespace std;
int num[31][31];
void fun(){
    int i,j;
    for(i=1;i<=30;i++){
        num[i][1]=num[i][i]=1;
    }
    for(i=3;i<=30;i++){
        for(j=2;j<i;j++){
            num[i][j]=num[i-1][j]+num[i-1][j-1];
        }
    }
}
int main(){
  int n;
  fun();
  while(cin>>n){
    for(int i=1;i<=n;i++){
        for(int j=1;j<=i;j++){
            cout<<num[i][j];
            if(j!=i)cout<<" ";
        }
        cout<<endl;
    }
    cout<<endl;
  }
  return 0;
}
