#include<iostream>
using namespace std;
int prime[40000]={0};
int vis[40000]={0};

//新的素数生成方式
void fun(){
	for(int i=2;i<33000;i++){
		if(!vis[i]){
			prime[i]=1;
			for(int j=2;i*j<33000;j++)
				vis[i*j]=1;
		}
	}
}
int main(){
	// 
	fun();
	int n;
	int sum;
	while(cin>>n&&n){
		sum=0;
		for(int i=0;i<=n/2;i++){
			if(prime[i]==0)continue;
			if(prime[n-i]!=0)//脑子不转圈，都想到prime[i]，没想到prime[j]，绝望
				sum++;
		}
		cout<<sum<<endl;
	}
	//
	return 0;
}


