//进制转换，回归最原始的方法

#include<iostream>
using namespace std;
int m;
long long c;
int num[40],pos;
void turn(){
  pos=0;
  for(int i=0;i<40;i++)
    num[i]=0;
  while(c){
    num[pos++]=c%m;
    c/=m;
  }
}
int main(){
 long long a,b;
 while(cin>>m>>a>>b&&m){
    c=a+b;
    if(c<=m){
        cout<<c<<endl;
        continue;
    }
    turn();
    for(int i=pos-1;i>=0;i--)
        cout<<num[i];
    cout<<endl;
 }
  return 0;
}
