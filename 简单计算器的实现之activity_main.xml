<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:stretchColumns="*">

    <TextView
        android:layout_weight="1"
        android:id="@+id/textView"
        android:background="#f0f0f0"
        android:gravity="center_vertical|right"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="40dp"
        android:maxLength="15"
        android:hint="@string/hint"
        android:textColor="@color/colorPrimary"
        />

    <TableRow
        android:layout_weight="1"
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:textSize="40dp"
            android:id="@+id/bt7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/digit7" />

        <Button
            android:textSize="40dp"
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/digit8" />

        <Button
            android:textSize="40dp"
            android:id="@+id/bt9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/digit9" />

        <Button
            android:textSize="40dp"
            android:id="@+id/bt_div"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/div" />
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:textSize="40dp"
            android:id="@+id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/digit4" />

        <Button
            android:textSize="40dp"
            android:id="@+id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/digit5" />

        <Button
            android:textSize="40dp"
            android:id="@+id/bt6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/digit6" />

        <Button
            android:textSize="40dp"
            android:id="@+id/bt_multi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/multi" />
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:textSize="40dp"
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/digit1" />

        <Button
            android:textSize="40dp"
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/digit2" />

        <Button
            android:textSize="40dp"
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/digit3" />

        <Button
            android:textSize="40dp"
            android:id="@+id/bt_dec"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/dec" />
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:textSize="40dp"
            android:id="@+id/bt0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/digit0" />

        <Button
            android:textSize="40dp"
            android:id="@+id/bt_point"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/point" />

        <Button
            android:textSize="40dp"
            android:id="@+id/bt_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/add" />

        <Button
            android:textSize="40dp"
            android:id="@+id/bt_equal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/equal" />
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_delete"
            android:layout_height="match_parent"
            android:text="DEL"
            android:layout_span="2"
            android:textSize="40dp" />
        <Button
            android:id="@+id/bt_clear"
            android:layout_height="match_parent"
            android:text="CLEAR"
            android:layout_span="2"
            android:textSize="40dp"/>


    </TableRow>



</TableLayout>
