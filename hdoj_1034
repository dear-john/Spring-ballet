#include<iostream>
using namespace std;
const int N=1000;
int a[N]={0},b[N]={0};
int main()
{
	int n;
	while(cin>>n&&n)
	{
		int s=0,i;
		for(i=0;i<n;i++)
			cin>>a[i];		
		while(1)
		{
			int flag=0;////////flag一定要放在while循环里！！！ 
						//把自己当电脑运行程序，一定要一步一步来，别想当然！！！ 
			for(int k=0;k<n-1;k++)
			{
				if(a[k]!=a[k+1])
				{
					flag=1;break;
				}
			}
			if(flag==0)break;
			for(i=0;i<n;i++)
			{
				a[i]/=2;
				b[i]=a[i]; 
			}
			for(i=1;i<n;i++)
			{
				a[i]+=b[i-1];
			}
			a[0]+=b[n-1];
			for(int j=0;j<n;j++) 
			{
				if(a[j]%2)
				{a[j]++;}
			}
			s++;
		}
		cout<<s<<' '<<a[0]<<endl;
	}
	return 0;
 } 
