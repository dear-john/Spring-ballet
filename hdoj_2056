//因为题目没说输入数据的大小顺序，以及具体是哪条对角线，所以需要进行整理，这里是变换为主对角线，且左小右大，上大下小，然后画图考虑相交部分就行了

#include<iostream>
#include<iomanip>
using namespace std;
int main(){
  double x1,y1,x2,y2,x3,y3,x4,y4;
  double x11,y11,x22,y22,x33,y33,x44,y44;
  double w,h;
  while(cin>>x11>>y11>>x22>>y22>>x33>>y33>>x44>>y44){
   if(x11>x22){x1=x22;x2=x11;}
   else {x1=x11;x2=x22;}

   if(x33>x44){x3=x44;x4=x33;}
   else {x3=x33;x4=x44;}

   if(y11>y22){y1=y22;y2=y11;}
   else {y1=y11;y2=y22;}

   if(y33>y44){y3=y44;y4=y33;}
   else {y3=y33;y4=y44;}

   if(x4<=x1||x3>=x2||y4<=y1||y3>=y2){cout<<"0.00\n";continue;}

   if(x3<=x1){
        if(x4>x1&&x4<x2)w=x4-x1;
        else w=x2-x1;
   }else{
        if(x4<x2)w=x4-x3;
        else w=x2-x3;
   }

   if(y3<=y1){
        if(y4>y1&&y4<y2)h=y4-y1;
        else h=y2-y1;
   }else{
        if(y4<y2)h=y4-y3;
        else h=y2-y3;
   }

   cout<<fixed<<setprecision(2)<<w*h<<endl;
  }
  return 0;
}
